{
  "name": "smoke-test-oracle",
  "version": "0.1.0",
  "description": "Composable smoke testing tool using Chrome DevTools MCP with context-aware storage",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "smoke-test": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "smoke-testing",
    "browser-automation",
    "chrome-devtools",
    "mcp",
    "visual-regression",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/cheerio": "^0.22.35",
    "chalk": "^5.3.0",
    "cheerio": "^1.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "dotenv": "^16.4.1",
    "fs-extra": "^11.2.0",
    "jsdom": "^24.0.0",
    "ora": "^8.0.1",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0",
    "sharp": "^0.33.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.16",
    "@types/pixelmatch": "^5.2.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
